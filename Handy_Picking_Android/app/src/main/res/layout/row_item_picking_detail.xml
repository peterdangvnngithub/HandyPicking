<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtPalletNo"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:text="No. 01"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtItemCode"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:text="Item Code"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtPalletNo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSeries"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:text="Series"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtPalletNo"
        app:layout_constraintTop_toBottomOf="@+id/txtItemCode" />

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:text="111,000"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtItemCode"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>